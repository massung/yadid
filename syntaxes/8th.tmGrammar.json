{
    "scopeName": "source.8th",
    "patterns": [
        {
            "include": "#interpret-mode"
        }
    ],
    "repository": {
        "interpret-mode": {
            "patterns": [
                {
                    "include": "#literals"
                },
                {
                    "include": "#characters"
                },
                {
                    "include": "#regexps"
                },
                {
                    "include": "#declarations"
                },
                {
                    "include": "#declaration-adjs"
                },
                {
                    "include": "#ffi-funcs"
                },
                {
                    "include": "#defers"
                },
                {
                    "include": "#needs"
                },
                {
                    "include": "#words"
                },
                {
                    "include": "#with-ns"
                },
                {
                    "include": "#conditional-comp"
                }
            ]
        },
        "compile-mode": {
            "patterns": [
                {
                    "include": "#literals"
                },
                {
                    "include": "#characters"
                },
                {
                    "include": "#regexps"
                },
                {
                    "include": "#control-flow"
                },
                {
                    "include": "#with-ns"
                },
                {
                    "include": "#conditional-comp"
                }
            ]
        },
        "literals": {
            "patterns": [
                {
                    "include": "#comments"
                },
                {
                    "include": "#constants"
                },
                {
                    "include": "#anons"
                },
                {
                    "include": "#xts"
                },
                {
                    "include": "#backticks"
                },
                {
                    "include": "#double-backticks"
                },
                {
                    "include": "#numbers"
                },
                {
                    "include": "#strings"
                },
                {
                    "include": "#arrays"
                },
                {
                    "include": "#maps"
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "include": "#complex"
                },
                {
                    "include": "#decimal"
                },
                {
                    "include": "#hex"
                },
                {
                    "include": "#octal"
                },
                {
                    "include": "#binary"
                },
                {
                    "include": "#float"
                }
            ]
        },
        "words": {
            "begin": "(?<=^|\\s|\\[|\\{)(:)\\s+([^/\"\\[\\{]\\S*)",
            "end": "(?<=^|\\s|\\[|\\{)(i?;)(?=\\s|$)",
            "beginCaptures": {
                "1": {
                    "name": "keyword"
                },
                "2": {
                    "name": "entity.name.function"
                }
            },
            "endCaptures": {
                "1": {
                    "name": "keyword"
                }
            },
            "patterns": [
                {
                    "include": "#compile-mode"
                }
            ]
        },
        "anons": {
            "begin": "(?<=^|\\s|\\[|\\{)(\\()(?=\\s|$)",
            "end": "(?<=^|\\s|\\[|\\{)(\\))(?=\\s|$)",
            "beginCaptures": {
                "1": {
                    "name": "keyword"
                }
            },
            "endCaptures": {
                "1": {
                    "name": "keyword"
                }
            },
            "patterns": [
                {
                    "include": "#compile-mode"
                }
            ]
        },
        "backticks": {
            "begin": "(?<=^|\\s|\\[|\\{)(`)(?=\\s|$)",
            "end": "(?<=^|\\s|\\[|\\{)(`)(?=\\s|$)",
            "beginCaptures": {
                "1": {
                    "name": "keyword"
                }
            },
            "endCaptures": {
                "1": {
                    "name": "keyword"
                }
            },
            "patterns": [
                {
                    "include": "#interpret-mode"
                }
            ]
        },
        "double-backticks": {
            "begin": "(?<=^|\\s|\\[|\\{)(``)(?=\\s|$)",
            "end": "(?<=^|\\s|\\[|\\{)(``)(?=\\s|$)",
            "beginCaptures": {
                "1": {
                    "name": "keyword"
                }
            },
            "endCaptures": {
                "1": {
                    "name": "keyword"
                }
            },
            "patterns": [
                {
                    "include": "#interpret-mode"
                }
            ]
        },
        "arrays": {
            "begin": "\\[",
            "end": "\\]",
            "patterns": [
                {
                    "include": "#literals"
                }
            ]
        },
        "maps": {
            "begin": "\\{",
            "end": "\\}",
            "patterns": [
                {
                    "include": "#literals"
                }
            ]
        },
        "comments": {
            "patterns": [
                {
                    "include": "#comment"
                },
                {
                    "include": "#multi-line"
                },
                {
                    "include": "#hashbang"
                },
                {
                    "include": "#docstring"
                }
            ]
        },
        "comment": {
            "match": "(?<=^|\\s|\\[|\\{)\\\\(?:\\s.*|$)",
            "name": "comment.line"
        },
        "multi-line": {
            "begin": "(?<=^|\\s|\\[|\\{)\\(\\*(?:\\s|$)",
            "end": "\\*\\)",
            "name": "comment.line",
            "patterns": [
                {
                    "include": "#multi-line"
                }
            ]
        },
        "hashbang": {
            "match": "(?<=^|\\s|\\[|\\{)#!(?:\\s+(\\S*)(\\s.*|$))?(?:\\s.*|$)",
            "name": "comment.line",
            "captures": {
                "1": {
                    "name": "support.function"
                },
                "2": {
                    "name": "comment.block.documentation"
                }
            }
        },
        "docstring": {
            "match": "(?<=^|\\s|\\[|\\{)--(?:\\s+([wsd]:)(\\s.*|$))?(?:\\s.*|$)",
            "name": "comment.line",
            "captures": {
                "1": {
                    "name": "markup.heading.1"
                },
                "2": {
                    "name": "comment.block.documentation"
                }
            }
        },
        "constants": {
            "match": "(?<=^|\\s|\\[|\\{)(?:true|false|null)(?=\\s|$)",
            "name": "constant.language"
        },
        "xts": {
            "match": "(?<=^|\\s|\\[|\\{)('|i:|p:|l:|alias:)\\s+([^/\"\\[\\{]\\S*)",
            "captures": {
                "1": {
                    "name": "keyword"
                },
                "2": {
                    "name": "entity.name.function"
                }
            }
        },
        "complex": {
            "match": "(?:^|\\s|\\[|\\{)\\d+(?:\\.\\d*)?(?:[eE][+-]?\\d+)[-+]\\d+(?:\\.\\d*)?(?:[eE][+-]?\\d+)?i(?=\\s|$)",
            "name": "constant.numeric"
        },
        "decimal": {
            "match": "(?:^|\\s|\\[|\\{)[+-]?#\\d+B?(?=\\s|$)",
            "name": "constant.numeric"
        },
        "hex": {
            "match": "(?:^|\\s|\\[|\\{)[+-]?(?:\\$|0[xX])\\h+(?=\\s|$)",
            "name": "constant.numeric"
        },
        "octal": {
            "match": "(?:^|\\s|\\[|\\{)[+-]?\\&[0-7]+(?=\\s|$)",
            "name": "constant.numeric"
        },
        "binary": {
            "match": "(?:^|\\s|\\[|\\{)[+-]?\\%[01]+(?=\\s|$)",
            "name": "constant.numeric"
        },
        "float": {
            "match": "(?:^|\\s|\\[|\\{)[+-]?\\d+(?:\\.\\d*)?(?:[eE][+-]?\\d+)?F?(?=\\s|$)",
            "name": "constant.numeric"
        },
        "characters": {
            "match": "(?:^|\\s)'\\S(?=\\s|$)",
            "name": "constant.numeric"
        },
        "strings": {
            "begin": "\"",
            "end": "\"",
            "name": "string.quoted.double",
            "patterns": [
                {
                    "include": "#string-chars"
                }
            ]
        },
        "string-chars": {
            "match": "\\\\.|."
        },
        "regexps": {
            "match": "/(?:/|\\S(?:\\.|[^/])*)/",
            "name": "string.regexp"
        },
        "needs": {
            "match": "(?:^|\\s|\\[|\\{)(ns:|needs)\\s+([^/\"\\[\\{]\\S*)",
            "captures": {
                "1": {
                    "name": "keyword"
                },
                "2": {
                    "name": "variable.language"
                }
            }
        },
        "defers": {
            "match": "(?<=^|\\s|\\[|\\{)(defer:)\\s+([^/\"\\[\\{]\\S*)",
            "captures": {
                "1": {
                    "name": "keyword"
                },
                "2": {
                    "name": "entity.name.function"
                }
            }
        },
        "declarations": {
            "match": "(?:^|\\s|\\[|\\{)(var,?|constant)\\s+([^/\"\\[\\{]\\S*)",
            "captures": {
                "1": {
                    "name": "keyword"
                },
                "2": {
                    "name": "variable.parameter"
                }
            }
        },
        "ffi-funcs": {
            "match": "(?:^|\\s|\\[|\\{)(func:)\\s+([^/\"\\[\\{]\\S*)",
            "captures": {
                "1": {
                    "name": "keyword"
                },
                "2": {
                    "name": "entity.name.function"
                }
            }
        },
        "declaration-adjs": {
            "match": "(?<=^|\\s|\\[|\\{)(public|private|locals:)(?=\\s|$)",
            "name": "keyword"
        },
        "control-flow": {
            "match": "(?<=^|\\s|\\[|\\{)(?:if;?|else|;?then|;;;?|null;|0;|again|while!?|until!?|repeat|recurse)(?=\\s|$)",
            "name": "keyword.control"
        },
        "conditional-comp": {
            "match": "(?<=^|\\s|\\[|\\{)(?:#if|#else|#then)(?=\\s|$)",
            "name": "support.function"
        },
        "with-ns": {
            "match": "(?<=^|\\s|\\[|\\{)(?:(;with)(?=\\s|$)|(with:)\\s+([^/\"\\[\\{]\\S*))",
            "captures": {
                "1": {
                    "name": "keyword"
                },
                "2": {
                    "name": "keyword"
                },
                "3": {
                    "name": "variable.language"
                }
            }
        }
    }
}
